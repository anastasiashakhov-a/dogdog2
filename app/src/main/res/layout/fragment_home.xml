<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/bgapps3"
    tools:context=".Home.HomeFragment">

    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/textFriend"
            android:text="Твои друзья"
            android:fontFamily="@font/spectralsc_extralight"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="100dp"
            android:layout_below="@id/textFriend"
            android:text="Здесь вы можете найти друга себе по душе. "
            android:fontFamily="@font/spectralsc_extralight"
            android:textSize="14sp"
            android:textColor="#F0CC4F"
            android:layout_width="275dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="45dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/love_pets"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true">
        </ImageView>

    </RelativeLayout>


    <ListView
        android:id="@+id/list_view1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonMore">

    </ListView>

    <Button
        android:id="@+id/buttonMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/spectralsc_bold"
        android:padding="7dp"
        android:textSize="10sp"
        android:text="показать больше"
        android:backgroundTint="#F0CC4F"
        android:textColor="#FF3700B3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>