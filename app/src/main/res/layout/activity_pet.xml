<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingRight="20dp"
        android:paddingStart="5dp"
        android:background="#4782A4"
        android:paddingLeft="20dp">
        <!--        android:padding="20dp"-->
        <ImageView
            android:id="@+id/imgProfilePet"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/nameProfilePet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/spectralsc_bold"
            android:layout_toRightOf="@+id/imgProfilePet"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

        </TextView>

    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Описание"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/spectralsc_bold"
            app:layout_constraintBottom_toTopOf="@+id/descrPetProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.284" />

        <TextView
            android:id="@+id/descrPetProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="40dp"
            android:paddingRight="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/spectralsc_extralight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.272" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>